{
    // Hide from search
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.css": true,
        "**/*.map": true,
        "**/*.item": true
    },    
    
    
    
    // Hide files
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/.nuget": true,
        "**/.idea": true,
        "**/.vs": true,
        "**/.txt": true,
    },
    
    
    
    // Workbench settings
    "editor.fontSize": 13,
    "editor.tabSize": 2,
    
    "workbench.colorCustomizations": {
        "titleBar.activeForeground": "#000",
        "titleBar.inactiveForeground": "#000000CC",
        "titleBar.activeBackground": "#FFC600",
        "titleBar.inactiveBackground": "#FFC600CC"
    },
    
    "window.menuBarVisibility": "default",
    "window.zoomLevel": 0,
    "workbench.activityBar.visible": true,
    "workbench.editor.tabSizing": "shrink",
    "editor.minimap.enabled": false,
    
    // Maximum amount of characters per line (0 = disable).
    "html.format.wrapLineLength": 0,
    
    // Number of editors shown in the Open Editors pane. Set it to 0 to hide the pane.
    "explorer.openEditors.visible": 0,
    


    // Editor
    "editor.fontFamily": "Fira Code", // https://github.com/tonsky/FiraCode/wiki/VS-Code-Instructions
    "editor.fontLigatures": true,



    // ESLint
    "eslint.options": {
        "configFile": ".eslintrc"
    },

    // beautify
    // https://marketplace.visualstudio.com/items?itemName=HookyQR.beautify
    "beautify.tabSize": 2,
    "beautify.options": {
        "preserve_newlines": true
    },

    // Associate files
    "files.associations": {
        "*.ascx": "html"
    },



    // Use Git Bash as terminal
    "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
    // Load .bash_profile
    "terminal.integrated.shellArgs.windows": [
        "-l"
    ],
    "terminal.integrated.env.osx": {
    },



    // Enable usage data and errors to be sent to Microsoft.
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    


    // Git
    "git.confirmSync": false,
    "git.autofetch": true,
    "git.enableSmartCommit": true,
    
    
    
    // JavaScript
    "javascript.updateImportsOnFileMove.enabled": "always",
    "npm.enableScriptExplorer": true,


    
    // Formatter
    "[javascript]": {
        "editor.fontLigatures": "'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss19', 'ss20'",
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[vue]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "browser-preview.startUrl": "http://localhost:3000/",
    "browser-preview.chromeExecutable": "â€ªC:\\Program Files (x86)\\Google\\Chrome\\Application\\chrome.exe",
    "settingsSync.ignoredExtensions": [
    
    ],
    "workbench.colorTheme": "Default Light+",
    "[handlebars]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    }

}